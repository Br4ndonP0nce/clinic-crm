{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false, // Changed to false to avoid unused variable errors
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "skipLibCheck": true,
    "esModuleInterop": true, // Important for default imports
    "allowSyntheticDefaultImports": true // Added for cors import
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}